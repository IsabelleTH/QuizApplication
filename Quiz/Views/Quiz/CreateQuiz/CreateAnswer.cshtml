@model Quiz.Models.AnswerModel
@{
    ViewBag.Title = "CreateAnswer";
}

<h2>Create Answers</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)


    <div class="form-group">
        @Html.LabelFor(m => m.Answer1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Answer1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Answer1, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Answer2, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Answer2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Answer2, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RightAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.RightAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.RightAnswer, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>

</div>


   
}
